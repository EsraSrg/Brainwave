@using BrainWave.EntityLayer.Concrete;
@model List<UserResource>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaynak İncele </title>
    @* <link rel="stylesheet" type="text/css" href="~/css/Style.css"> *@
    <style>
        h2 {
            color: #4A4A4A;
        }

        h1 {
            color: #FFFFFF;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #02031a;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #ffffff40;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .options {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }

        .option {
            width: calc(80% - 10%); /* Genişliği azalttık */
            background-color: rgba(255, 255, 255, 0.9);
            padding: 10px; /* Padding'i azalttık */
            margin-bottom: 10px; /* Margin'i azalttık */
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            text-decoration: none;
            color: black;
            transition: background-color 0.3s ease;
        }

            .option:hover {
                background-color: rgba(224, 224, 224, 0.5);
            }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 200px;
            height: 100%;
            background-color: rgba(167, 167, 167, 0.192);
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar a {
                display: block;
                width: 100%;
                padding: 15px 20px;
                margin: 10px 0;
                color: #fff;
                text-decoration: none;
                text-align: center;
            }

                .sidebar a:hover {
                    background-color: #86858545;
                }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            text-align: center;
        }

            .logo img {
                width: 120px;
                height: auto;
                margin-right: 5px;
            }

            .logo h1 {
                margin: 0;
                color: #fff;
                font-size: 24px;
                cursor: pointer;
            }

        .top-right {
            position: fixed;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 20px;
        }

            .top-right a {
                color: white;
                text-decoration: none;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 10px 20px;
                border-radius: 5px;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
                transition: background-color 0.3s ease;
            }

                .top-right a:hover {
                    background-color: #2b8c2eed;
                }

        .review {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 10px; /* Padding'i azalttık */
            margin-bottom: 10px; /* Margin'i azalttık */
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            text-align: left;
        }

        form {
            margin-top: 20px;
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }

        .add-resource-btn {
            display: block;
            width: 100%;
            padding: 10px 0;
            margin: 20px 0;
            background-color: #842424;
            color: white;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .add-resource-btn:hover {
                background-color: #8d4545;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <a href="/Home/Index">
                <img src="~/images/img1.png" alt="Brainwave Logo">
                <h1>Brainwave</h1>
            </a>
        </div>
        <a href="/Home/Index">Anasayfa</a>
        <a href="/Profile/Index">Profilim</a>
        <a href="/connections/Index">Bağlantılarım</a>
        <a href="/MyProjects/Index">Projelerim</a>
    </div>
    <div class="top-right">
        <a href="/Login/Index">Çıkış Yap</a>
        <a href="#">Ayarlar</a>
    </div>
    <div class="container">
        @{
            // Dropdown seçeneklerini dosyadan yükleme
            string filePath = "wwwroot/dropdownOptions.json";
            var options = System.IO.File.Exists(filePath)
            ? System.Text.Json.JsonSerializer.Deserialize<BrainWave.PresentationLayer.Controllers.DropdownOptions>(System.IO.File.ReadAllText(filePath))
            : new BrainWave.PresentationLayer.Controllers.DropdownOptions();
        }
        <form method="get" action="/AllResources/Index">
            <select name="category" id="category">
                @foreach (var item in options.SkillOptions)
                {
                    <option value="@item">@item</option>
                }
            </select>
            <input type="submit" value="Ara" />
        </form>
        @foreach (var resource in Model)
        {
            <div class="review">
                @if (!string.IsNullOrEmpty(resource.ResourceTitle))
                {
                    <h4>@resource.ResourceTitle</h4>
                    <hr />

                    <h4>Açıklama</h4>
                    <p>@resource.ResourceDescription</p>

                    <h4>Yazar</h4>
                    <p>@resource.ResourceAuthor</p>

                    <h4>Kategori</h4>
                    <p>@resource.ResourceCategories</p>

                    <h4>Yayınlanma Tarihi</h4>
                    <p>@resource.ResourcePublishDate</p>

                    <h4>URL</h4>
                    <p>@resource.ResourceUrl</p>


@* 
                    <p>Resource ID: @resource.UserResourceID</p>
                    <p>User ID: @resource.AppUserID</p> *@
                }
            </div>
        }
        <a href="/CreateResource/Index" class="add-resource-btn">Kaynak Ekle</a>
    </div>
</body>
</html>
