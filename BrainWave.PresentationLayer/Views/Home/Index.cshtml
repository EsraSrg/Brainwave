@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa</title>
    <link rel="stylesheet" href="~/css/Style.css">
    <style>
        h2 {
            color: #000000c4;
        }

        h1 {
            color: #ffffff;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #02031a;
        }

        .container {
            position: absolute;
            z-index: 1;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 800px;
            padding: 40px;
            background-color: rgba(255, 255, 255, 0.11);
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .options {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .option {
            width: calc(45% - 20px);
            background-color: rgba(240, 240, 240, 0.8);
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .option:hover {
                background-color: rgba(224, 224, 224, 0.38);
            }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 200px;
            height: 100%;
            background-color: rgba(167, 167, 167, 0.192);
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar a {
                display: block;
                width: 100%;
                padding: 15px 20px;
                margin: 10px 0;
                color: #fff;
                text-decoration: none;
                text-align: center;
            }

                .sidebar a:hover {
                    background-color: #86858545;
                }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            text-align: center;
        }

            .logo img {
                width: 120px;
                height: auto;
                margin-right: 5px;
            }

            .logo h1 {
                margin: 0;
                color: #fff;
                font-size: 24px;
                cursor: pointer;
            }

        .top-right {
            position: fixed;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 20px;
        }

            .top-right a {
                color: white;
                text-decoration: none;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 10px 20px;
                border-radius: 5px;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            }

                .top-right a:hover {
                    background-color: rgba(169, 169, 169, 0.332);
                }
    </style>
</head>
<body>
    <div id="background-animation"></div>
    <div class="background"></div>
    <div class="sidebar">
        <div class="logo">
            <a href="/Home/Index">
                <img src="~/images/img1.png" alt="Brainwave Logo">
                <h1>Brainwave</h1>
            </a>
        </div>
        <a href="/Home/Index">Anasayfa</a>
        <a href="/Profile/Index">Profilim</a>
        <a href="mesajlar.html">Mesajlar</a>
        <a href="/Baglantilarim/Index">Bağlantılarım</a>
        <a href="/MyProjects/Index">Projelerim</a>
    </div>
    <div class="top-right">
        <a href="giris.html">Çıkış Yap</a>
        <a href="#">Ayarlar</a>
    </div>
    <div class="container">
        <h1>Hoş Geldiniz!</h1>
        <div class="options">
            <a href="/AllUsers/Index" class="option">
                <h2>Ekip Arkadaşı Ara</h2>

            </a>
            <a href="/AllProjects/Index" class="option">
                <h2>Proje Ara</h2>

            </a>
            <a href="/Mentor/Index" class="option">
                <h2>Mentor/Menti Ara</h2>

            </a>
            <a href="/AllResources/Index" class="option">
                <h2>Kaynak İncele</h2>

            </a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/three.r134.min.js"></script>
    <script src="~/js/vanta.net.min.js"></script>
    <script>
        VANTA.NET({
            el: "#background-animation",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0xe6e6e6,
            backgroundColor: 0xc0b25
        });


    </script>


</body>
</html>

