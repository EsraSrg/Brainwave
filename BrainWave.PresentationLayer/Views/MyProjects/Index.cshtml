@using BrainWave.EntityLayer.Concrete;
@model List<UserProject>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>AllProjects</title>
</head>
<body>
	<h2>My Projects</h2>
	<div>
		@foreach (var project in Model)
		{
			<div class="review">
				@if (!string.IsNullOrEmpty(project.ProjectTitle))
				{
					<h4>Title</h4>
					<hr />
					<p>@project.ProjectTitle</p>

					<h6>Desc</h6>
					<p>@project.ProjectDescription</p>

					<h6>Categories</h6>
					<p>@project.ProjectCategories</p>

					<h6>Tools</h6>
					<p>@project.ProjectTools</p>

					<h6>Sources</h6>
					<p>@project.ProjectTasks</p>

					<h6>Privacy</h6>
					@if(project.ProjectPrivacy == true)
					{
						<p>Profilde gösterilecek.</p>
					}
					else
					{
						<p>Profilde gösterilmeyecek.</p>
					}
					
					@if (project.ProjectStatus == true)
					{
						<h6>Status</h6>
						<p>Aktif proje</p>
					}
					<a asp-action="Edit" asp-route-id="@project.UserProjectID" class="btn btn-primary">Düzenle</a>
				}
			</div>
		}
	</div>

</body>
</html>
