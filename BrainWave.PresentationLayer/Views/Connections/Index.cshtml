@model IEnumerable<BrainWave.EntityLayer.Concrete.AppUser>

@{
    ViewBag.Title = "Bağlantılarım";
}

<div style="position: relative;">
    <a href="@Url.Action("Index", "PendingRequests")" style="position: absolute; top: 10px; right: 10px; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px;">
        Bekleyen İstekleri Görüntüle
    </a>
</div>

<h2>Onaylanan Bağlantılar</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var connection in Model)
        {
            <li>
                <h3>@connection.UserName</h3>
                <p>@connection.Email</p>
            </li>
        }
    </ul>
}
else
{
    <p>Hiç onaylanmış bağlantınız yok.</p>
}
